<script>
import wepy from 'wepy'
import api from '@/utils/api'

export default class GoodDetailIndex extends wepy.page {
  config = {
    navigationBarTitleText: '商品详情',
    navigationBarBackgroundColor: '#fafafa'
  }

  data = {
    // 商品 ID
    id: null,
    // 商品详情
    good: {},
    // banner 设置相关
    autoplay: true,
    interval: 3000,
    duration: 1000,
    // 购物车商品
    cartItems: [],
    hideShopPopup: true,
    shopType: 'addShopCar',
    // 购买（加入购物车）相关
    buyNumber: 1,
    buyNumMin: 1,
    buyNumMax: 99999
  }

  computed = {
    cartNum() {
      return this.cartItems.length || 0
    }
  }

  methods = {
    // 加入购物车（页面显示）
    toAddShopCart() {
      this.shopType = 'addShopCar'
      this.hideShopPopup = false
    },
    // 立即购买（页面显示）
    tobuy() {
      this.shopType = 'tobuy'
      this.hideShopPopup = false
    },
    closePopupTap() {
      this.hideShopPopup = true
    },
    numJianTap() {
      if (this.buyNumber > this.buyNumMin) {
        this.buyNumber --
      }
    },
    numJiaTap() {
      if (this.buyNumber < this.buyNumMax) {
        this.buyNumber ++
      }
    },
    // 商品数量输入
    bindBuyNumber(e) {
      this.buyNumber = e.detail.value
    },
    // 加入购物车（数据操作）
    async addShopCart() {
      if (this.buyNumber < 0) {
        wepy.showModal({
          title: '提示',
          content: '购买数量不能为0！',
          showCancel: false
        })
        return
      }

      // 提交数据
      let cartResponse = await api.authRequest({
        url: 'cart',
        method: 'POST',
        data: {
          number: this.buyNumber,
          product_id: this.id,
          include: 'product'
        }
      })

      // 更新缓存数据
      if (cartResponse.statusCode === 200) {
        let cartItems = cartResponse.data.data

        wepy.setStorageSync('cartItems', cartItems)
        this.cartItems = cartItems

        // 隐藏购物车页面
        this.hideShopPopup = true

        this.$apply()

        wepy.showToast({
          title: '加入购物车成功',
          icon: 'success',
          duration: 2000
        })
      } else {
        wepy.showModal({
          title: '提示',
          content: '添加购物车失败！',
          showCancel: false
        })
      }
    },
    // 立即购买 (数据操作)
    buyNow() {
      if (this.buyNumber < 0) {
        wepy.showModal({
          title: '提示',
          content: '购买数量不能为0！',
          showCancel: false
        })
        return
      }

      // 组件购买商品的信息
      // 存入缓存中

      // 跳转到结算页面
      wepy.navigateTo({
        url: '/pages/to-pay-order/index?orderType=buyNow'
      })
    },
    // 购物车
    goShopCart() {
      wepy.reLaunch({
        url: '/pages/shop-cart/index'
      })
    }
  }

  async onLoad(options) {
    this.id = options.id
    // 获取商品详情
    await this.getGood(this.id)

    this.$apply()
  }

  async onShow() {
    // 购物车数据
    let cartItems = wepy.getStorageSync('cartItems')
    if (cartItems) {
      this.cartItems = cartItems
    }
  }

  // 获取商品详情
  async getGood(id) {
    let goodResponse = await api.request({
      url: 'products/' + id
    })

    if (goodResponse.statusCode === 400) {
      wepy.showToast({
        title: '链接有误或者商品已下架',
        icon: 'none',
        duration: 2000
      })

      setTimeout(() => {
        wepy.navigateBack()
      }, 2000)
    }

    if (goodResponse.statusCode === 200) {
      this.good = goodResponse.data
      this.$apply()
    }

    return goodResponse
  }
}
</script>
